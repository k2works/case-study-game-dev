<Window
    x:Class="PuyoPuyo.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ぷよぷよゲーム" Height="600" Width="400">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- スコア表示 -->
    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
      <TextBlock Text="スコア: " FontSize="18" FontWeight="Bold"/>
      <TextBlock Text="{Binding Score}" FontSize="18"/>
    </StackPanel>

    <!-- ゲームボード（プレースホルダー） -->
    <Border Grid.Row="1" BorderBrush="Black" BorderThickness="2" Margin="10">
      <Canvas Background="WhiteSmoke" Width="300" Height="480"/>
    </Border>

    <!-- コントロールボタン -->
    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
      <Button Command="{Binding StartGame}" Content="ゲーム開始" Width="120" Height="40" Margin="5"/>
    </StackPanel>
  </Grid>
</Window>
