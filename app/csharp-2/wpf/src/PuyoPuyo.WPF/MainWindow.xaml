<Window x:Class="PuyoPuyo.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:PuyoPuyo.WPF.ViewModels"
        mc:Ignorable="d"
        Title="ぷよぷよゲーム" Height="690" Width="500"
        Focusable="True">
    <Window.DataContext>
        <viewmodels:GameViewModel />
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="Left" Command="{Binding MoveLeftCommand}" />
        <KeyBinding Key="Right" Command="{Binding MoveRightCommand}" />
        <KeyBinding Key="Down" Command="{Binding MoveDownCommand}" />
        <KeyBinding Key="Up" Command="{Binding RotateCommand}" />
        <KeyBinding Key="Z" Command="{Binding RotateCommand}" />
        <KeyBinding Key="A" Command="{Binding RotateCommand}" />
        <KeyBinding Key="X" Command="{Binding RotateRightCommand}" />
        <KeyBinding Key="S" Command="{Binding RotateRightCommand}" />
    </Window.InputBindings>

    <StackPanel Orientation="Vertical">
        <!-- タイトル -->
        <TextBlock Text="ぷよぷよゲーム" FontSize="24" HorizontalAlignment="Center" Margin="10"/>

        <!-- ゲームエリア（ボードと情報パネルを横に並べる） -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <!-- ゲームボード -->
            <Border BorderBrush="Black" BorderThickness="2" Margin="10">
                <Grid Width="240" Height="520">
                    <Canvas Background="WhiteSmoke">
                        <!-- ステージに配置されたぷよ -->
                        <ItemsControl ItemsSource="{Binding StagePuyos}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style>
                                    <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                    <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Ellipse Width="36" Height="36" Fill="{Binding Color}" Stroke="Black" StrokeThickness="1"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- 軸ぷよ -->
                        <Ellipse Width="36" Height="36"
                                 Canvas.Left="{Binding CurrentPuyoX}"
                                 Canvas.Top="{Binding CurrentPuyoY}"
                                 Fill="{Binding CurrentPuyoColor}"
                                 Stroke="Black" StrokeThickness="1"/>

                        <!-- 副ぷよ -->
                        <Ellipse Width="36" Height="36"
                                 Canvas.Left="{Binding SubPuyoX}"
                                 Canvas.Top="{Binding SubPuyoY}"
                                 Fill="{Binding SubPuyoColor}"
                                 Stroke="Black" StrokeThickness="1"/>
                    </Canvas>

                    <!-- ゲームオーバー表示 -->
                    <Border Background="#CC000000" Visibility="{Binding IsGameOver, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="GAME OVER" FontSize="32" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <TextBlock Text="{Binding Game.Score.CurrentScore, StringFormat='Score: {0}'}" FontSize="20" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding Game.Score.ChainCount, StringFormat='Chain: {0}'}" FontSize="20" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                            <Button Command="{Binding ResetCommand}" Content="もう一度プレイ" Width="150" Height="40" FontSize="16"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- 情報パネル -->
            <StackPanel Orientation="Vertical" Margin="10" VerticalAlignment="Top">
                <!-- スコア表示 -->
                <TextBlock Text="Score" FontSize="14" FontWeight="Bold" Margin="0,5,0,5"/>
                <TextBlock Text="{Binding Game.Score.CurrentScore}" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- 連鎖数表示 -->
                <TextBlock Text="Chain" FontSize="14" FontWeight="Bold" Margin="0,5,0,5"/>
                <TextBlock Text="{Binding Game.Score.ChainCount}" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            </StackPanel>
        </StackPanel>

        <!-- コントロールボタン -->
        <Button Command="{Binding StartCommand}" Content="ゲーム開始" Width="120" Height="40" Margin="10"/>
    </StackPanel>
</Window>
